            <script>
                setTimeout(function () {
                    const alertElement = document.getElementById('error-alert');
                    if (alertElement) {
                        const bsAlert = new bootstrap.Alert(alertElement);
                        bsAlert.close();
                    }
                }, 5000);

                const signinBtn = document.querySelector(".top-content > button");
                const signinWarning = document.querySelector("#signin-warning")
                const closeSigninWarning = document.querySelector("#closeBtn")

                function lockScroll() {
                    document.body.style.overflow = 'hidden';
                }

                function unlockScroll() {
                    document.body.style.overflow = '';
                }

                function showDialog() {
                    overlay.classList.add("show");
                    signinWarning.classList.add("show");
                    lockScroll();
                }

                function hideDialog() {
                    signinWarning.classList.remove("show");
                    overlay.classList.remove("show");
                    unlockScroll();
                }

                signinBtn.addEventListener("click", () => {
                    showDialog();
                });

                closeSigninWarning.addEventListener("click", () => {
                    hideDialog();
                });

                overlay.addEventListener("click", () => {
                    hideDialog();
                });

            </script>

